<div class="row">
    <div class="col s12 m8">
        <h3><%= story.title %>
            if (helpers.
            <a href="/stories/edit/<%= story._id.toString() %>" class="btn blue"></a>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title"><%= helpers.formatDate(story.createdAt, "MMMM Do YYYY, h:mm:ss a") %>></span>
                <%= story.body %>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title"><%= story.author.displayName %></span>
                <img src="<%= story.author.image %>" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/user/<%= story.authorId.toString() %>">More From <%= story.author.name.givenName %>></a>
            </div>
        </div>
    </div>
</div>